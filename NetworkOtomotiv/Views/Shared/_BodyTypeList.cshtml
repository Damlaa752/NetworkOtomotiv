@model IEnumerable<NetworkOtomotiv.Entity.Model.Entity.BodyType>
<ul class="list-group">
    @if (ViewBag.Id == null)
    {
        <a class="list-group-item active" asp-controller="Home" asp-action="List">
            All Categories
        </a>
    }
    else
    {
        <a class="list-group-item" asp-controller="Home" asp-action="List" asp-route-id="">
            All Categories
        </a>
    }
    @if (Model != null)
    {


        @foreach (var bodyType in Model)
        {
            if (ViewBag.Id != null)
            {
                if (bodyType.Id == ViewBag.Id)
                {
                    <a class="list-group-item active" asp-controller="Home" asp-action="Index" asp-route-id="@bodyType.Id">
                        @bodyType.Name
                    </a>
                }
                else
                {
                    <a class="list-group-item" asp-controller="Home" asp-action="Index" asp-route-id="@bodyType.Id">
                        @bodyType.Name
                    </a>
                }
            }
            else
            {
                <a class="list-group-item" asp-controller="Home" asp-action="List" asp-route-id="@bodyType.Id">
                    @bodyType.Name
                </a>
            }
        }
    }
</ul>